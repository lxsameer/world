separator_block_width=15
color=#CCCCCC
align=center

[online-status]
command=ping -c 3 google.com >> /dev/null||echo 'No Internet'
color=#FF0000
interval=10


[memory]
command=/usr/libexec/i3blocks/memory
separator_block_width=13
interval=10

[disk-home]
command=/usr/libexec/i3blocks/disk $HOME
interval=30

[wireless]
command=/usr/libexec/i3blocks/network wlp3s0 W
#color=#00FF00
interval=10

[cpu]
command=/usr/libexec/i3blocks/cpu
interval=2
color=#6D6DFF

[bandwidth]
command=/home/samim/.bin/network.sh
interval=5

[time]
command=date '%d+%H:%M'
interval=5
color=#6D6DFF